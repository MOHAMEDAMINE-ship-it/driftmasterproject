

    <h1 align="center">Liste des produits</h1><hr>

    <table class="table">
   
<table class="table table-bordered dataTable" id="table" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Marque</th>
                <th>Type</th>
                <th>Prix</th>
                <th>Description</th>
               
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.marque }}</td>
                <td>{{ produit.type }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.description }}</td>
               
            </tr>
        
        {% endfor %}
        </tbody>
    </table>
    
   
  

