{% extends 'base.html.twig' %}

{% block title %}Circuit{% endblock %}

{% block body %}
    <h1>Circuit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ circuit.id }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ circuit.localisation }}</td>
            </tr>
            <tr>
                <th>Dateouverture</th>
                <td>{{ circuit.dateouverture ? circuit.dateouverture|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Longeur</th>
                <td>{{ circuit.longeur }}</td>
            </tr>
            <tr>
                <th>Proprieteur</th>
                <td>{{ circuit.proprieteur }}</td>
            </tr>
            <tr>
                <th>Nombrevirage</th>
                <td>{{ circuit.nombrevirage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('circuit_index') }}">back to list</a>

    <a href="{{ path('circuit_edit', {'id': circuit.id}) }}">edit</a>

    {{ include('circuit/_delete_form.html.twig') }}
{% endblock %}
